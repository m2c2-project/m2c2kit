{
  "references": [{ "path": "../core" }, { "path": "../addons" }],
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}

