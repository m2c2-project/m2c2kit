{
  "name": "@m2c2kit/assessment-grid-memory",
  "version": "1.0.0",
  "scripts": {
    "serve": "rollup -c --watch --configServe",
    "build-watch": "rollup -c --watch --configProd ",
    "build": "rollup -c --configProd",
    "postinstall": "node post-install.mjs",
    "clean": "rimraf build build-umd dist .rollup.cache tsconfig.tsbuildinfo"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "files": [
    "post-install.mjs",
    "dist/index.js",
    "dist/index.d.ts",
    "img/*",
    "fonts/*"
  ],
  "dependencies": {
    "@m2c2kit/addons": "0.1.10",
    "@m2c2kit/core": "0.1.10"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "21.0.2",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@rollup/plugin-typescript": "8.3.1",
    "rimraf": "^3.0.2",
    "rollup": "2.70.0",
    "rollup-plugin-copy": "3.4.0",
    "rollup-plugin-delete": "2.0.0",
    "rollup-plugin-livereload": "2.0.5",
    "rollup-plugin-serve": "1.1.0",
    "rollup-plugin-shim": "1.0.0",
    "rollup-plugin-sourcemaps": "0.6.3"
  }
}
