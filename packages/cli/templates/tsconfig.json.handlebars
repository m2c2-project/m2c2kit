{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "dom.iterable"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "**/{{appName}}.bundle.js",
    "rollup.config.js",
    "post-install.mjs"
  ]
}
