{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "experimentalDecorators": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2020",
    "lib": ["es2020"],
    "rootDir": "src"
  },
  "exclude": ["**/node_modules/**/*", "dist"]
}
