{
  "compilerOptions": {
    "composite": true,
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    // see https://stackoverflow.com/a/56710182 for why I use types option
    // and a separate tsconfig for jest
    "types": ["jest", "node"]
  },
  "include": ["**/__tests__", "**/*.test.ts"]
}
