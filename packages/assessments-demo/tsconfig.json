{
  "references": [
    { "path": "../assessment-cli-starter" },
    { "path": "../assessment-color-dots" },
    { "path": "../assessment-color-shapes" },
    { "path": "../assessment-grid-memory" },
    { "path": "../assessment-symbol-search" },
    { "path": "../survey" },
    { "path": "../db" }
  ],
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
