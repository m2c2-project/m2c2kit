{
  "compilerOptions": {
    "target": "es6",
    "module": "node16",
    "strict": true,
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "build",
    "rootDir": "src",
    "removeComments": false
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"],
  "exclude": ["**/__tests__", "**/*.test.ts"]
}
