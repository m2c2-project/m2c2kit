{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "runner-build",
    "rootDir": "src",
    "skipLibCheck": true,
    "sourceMap": true,
    // esbuild will build the runner to serve the module; tsc will only type check
    "noEmit": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
