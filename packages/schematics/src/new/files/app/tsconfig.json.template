{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es6", "dom", "dom.iterable"],
    "module": "es6",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "build",
    "rootDir": "src",    
    "skipLibCheck": true,
    // esbuild will build the app; tsc will only type check
    "noEmit": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.js"]
}
